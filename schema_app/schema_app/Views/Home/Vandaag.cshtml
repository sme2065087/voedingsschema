@model IEnumerable<schema_app.Models.MaaltijdUser>

    @{
    ViewBag.Title = "Vandaag";
    }


    <h3>@DateTime.Now.ToString("dddd") @DateTime.Now.Day @DateTime.Now.ToString("MMMM")</h3>
    <div class="row">
        <div class="col-md-4">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Tijd</th>
                        <th scope="col">Maaltijd</th>
                        <th scope="col">Voldaan</th>
                    </tr>
                </thead>
                <tbody>



                    @foreach (var item in Model) {

                    string time = item.Eetmoment.Value.ToString("HH:mm:ss");

                    if (DateTime.Now.ToString("M-d-yyyy") == item.Eetmoment.Value.ToString("M-d-yyyy")) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GerechtRefId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.voldaan)
                        </td>
                    </tr>
                    }}

                </tbody>
            </table>
            <label>Voedingsstof1</label>
            <div class="progress">
                <div class="progress-bar " role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <label>Voedingsstof2</label>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <label>Voedingsstof3</label>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <label>Voedingsstof4</label>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div><br />

            <label>Dagelijks doel</label>
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
