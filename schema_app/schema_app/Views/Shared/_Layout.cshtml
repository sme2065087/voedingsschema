<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Navbar</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @if (HttpContext.Current.Request.Url.AbsolutePath.Contains("/Home") == true || HttpContext.Current.Request.Url.AbsolutePath == "/"){<text>active</text>}">
                    <a class="nav-link" href="/">Startpagina</a>
                </li>
                <li class="nav-item @if (HttpContext.Current.Request.Url.AbsolutePath.Contains("/Configuratie") == true){<text>active</text>}">
                    <a class="nav-link" href="/Configuratie">Configuratie</a>
                </li>
            </ul>
        </div>
    </nav>
    @if (HttpContext.Current.Request.Url.AbsolutePath.Contains("/Home") == true || HttpContext.Current.Request.Url.AbsolutePath == "/")
    {
        <h3>@DateTime.Now.ToString("dddd") @DateTime.Now.Day @DateTime.Now.ToString("MMMM")</h3>
        <div class="btn-group">
            <a href="/Home/Vandaag" class="btn @if (HttpContext.Current.Request.Url.AbsolutePath.Contains("/Home/Vandaag") == true) { <text>btn-primary</text>} else {  <text>btn-default</text> } ">Vandaag</a>
            <a href="/Home/Week" class="btn @if (HttpContext.Current.Request.Url.AbsolutePath.Contains("/Home/Week") == true) { <text>btn-primary</text>} else {  <text>btn-default</text> } ">Deze week</a>
        </div>}
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
